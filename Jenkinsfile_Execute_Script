pipeline {
    agent any
      environment {
        DISABLE_AUTH = 'false'
        DB_ENGINE    = 'mysql'
    }
    stages {
                    stage('TEST-A') {
                            environment {
                            ENV_VALUE="TEST-A"
                            }
                            steps {
                                 sh '''
                                 date
                                 time
                                 hostname
                                 echo "Database engine is ${DB_ENGINE}"
                                 echo "Environment is ${ENV_VALUE}"
                                 echo "DISABLE_AUTH is ${DISABLE_AUTH}"
                                 '''
                            }
                        }

       stage('TEST-B') {
                            environment {
                            ENV_VALUE="TEST-B"
                            }
                            steps {
                                 sh '''
                                 date
                                 time
                                 hostname
                                 echo "Database engine is ${DB_ENGINE}"
                                 echo "DISABLE_AUTH is ${DISABLE_AUTH}"
                                 echo "Environment is ${ENV_VALUE}"
                                 '''
                            }
                        }
                        }
                        }